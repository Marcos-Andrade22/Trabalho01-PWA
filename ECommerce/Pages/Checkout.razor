@page "/checkout"
<div class="p-4 max-w-xl mx-auto">
  <h2 class="text-xl font-bold mb-4">Finalizar Compra</h2>
  <form class="space-y-4">
    <input type="text" placeholder="Nome completo" class="w-full border rounded-xl p-2" />
    <input type="text" placeholder="Endereço" class="w-full border rounded-xl p-2" />
    <input type="text" placeholder="Cartão de crédito" class="w-full border rounded-xl p-2" />
    <a href="/confirmacao" class="block bg-blue-500 text-white text-center px-4 py-2 rounded-xl hover:bg-blue-600">Confirmar Pedido</a>
  </form>
</div>