@code {
    [Parameter] public Produto Produto { get; set; }
}

<div class="flex flex-col sm:flex-row bg-white p-4 rounded-lg shadow-md hover:shadow-lg gap-4 w-full">
    <!-- Imagem do produto -->
    <img src="@Produto.ImagemUrl" alt="@Produto.Nome"
        class="w-full sm:w-32 h-32 object-contain rounded-md mx-auto sm:mx-0" />

    <!-- Informações do produto -->
    <div class="flex flex-col justify-between flex-grow">
        <div>
            <h3 class="text-base sm:text-lg font-semibold text-gray-800">@Produto.Nome</h3>
            <p class="text-gray-500 text-sm">@Produto.Descricao</p>
        </div>

        <div class="flex items-center justify-between mt-2">
            <p class="text-base sm:text-lg font-bold text-green-500">R$ @Produto.Preco.ToString("F2")</p>
        </div>
    </div>
</div>
