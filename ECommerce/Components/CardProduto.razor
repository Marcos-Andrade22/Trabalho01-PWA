<div class="bg-white p-4 rounded-lg shadow-md hover:shadow-lg">
    <img src="@ImagemUrl" alt="@Nome" class="w-full h-40 object-cover rounded-md mb-4">
    <div class="flex justify-center items-center flex-col">
        <h3 class="text-lg font-semibold text-gray-800">@Nome</h3>
        <p class="text-gray-500">@Descricao</p>
        <p class="text-lg font-bold text-green-500">@Preco</p>
    </div>
    <ButtonGroup />

</div>

@code {
    [Parameter] public string ImagemUrl { get; set; }
    [Parameter] public string Nome { get; set; }
    [Parameter] public string Preco { get; set; }
    [Parameter] public string Link { get; set; }
    [Parameter] public string Descricao { get; set; }
}