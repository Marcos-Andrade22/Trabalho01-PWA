@code {
    [Parameter] public Produto Produto { get; set; }
}

<div class="bg-white p-4 rounded-lg shadow-md hover:shadow-lg">
    <img src="@Produto.ImagemUrl" alt="@Produto.Nome" class="w-full h-40 object-cover rounded-md mb-4" />

    <div class="flex justify-center items-center flex-col">
        <h3 class="text-lg font-semibold text-gray-800">@Produto.Nome</h3>
        <p class="text-gray-500">@Produto.Descricao</p>
        <p class="text-lg font-bold text-green-500">R$ @Produto.Preco.ToString("F2")</p>
    </div>

    <ButtonGroup produto="Produto" />
</div>