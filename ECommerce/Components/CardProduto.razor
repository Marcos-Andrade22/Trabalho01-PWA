<div class="p-4 bg-white/80 border border-blue-100 rounded-xl shadow-md hover:shadow-lg transition backdrop-blur-sm">
    <a href="@Link">
        <img src="@ImagemUrl" alt="@Nome" class="rounded-xl mb-2 w-full h-48 object-cover" />
        <p class="font-medium text-gray-800">@Nome</p>
        <p class="text-sm text-blue-600">@Preco</p>
    </a>
</div>



